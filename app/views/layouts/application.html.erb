<!DOCTYPE html>
<html>

<head>
  <title>Furima</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <script type="text/javascript" src="https://js.pay.jp/v1/"></script>
  <%= stylesheet_link_tag 'application', media: 'all','data-turbolinks-track':'reload'%>
  <%= javascript_pack_tag 'application'  %>
</head>

<body>
  <header class="header">
    <div class="inner">
    <div class="nav">
     <% if user_signed_in? %>
       <div class="lists_right">
         <%=link_to "ログアウト",destroy_user_session_path,method: :delete,class: :log_out%>
         <%=link_to current_user.nickname,user_registration_path,class: "user-nickname"%>
         </div>
         <% else %>
         <div class="lists_right">
          <%=link_to "ログイン",new_user_session_path,class: :log_in%>
          <%=link_to "新規登録",new_user_registration_path,class: :sign_up%>
      </div>
      <% end %>
    </div>
      </header>
  <%= yield %>
</body>

</html>